<%= simple_form_for @physician, :html => { :class => 'form-horizontal' } do |f| %>
<%= render "shared/error_messages", object: f.object %>
<fieldset>
  <legend>Physician Profile</legend>

  <%= f.input :first_name  %>
  <%= f.input :last_name %>
  <%= f.input :mobile %>
  <%= f.input :dob, :input_html => {:class => "span1"}, :label => "date of birth",
            :as => :date, :start_year => Date.today.year - 90,
                      :end_year => Date.today.year - 12%>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-large btn-primary' %>
  </div>
</fieldset>
<% end %>

