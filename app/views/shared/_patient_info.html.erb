<a href="<%= patient_path(@patient) %>">
	<span class="span2 badge-big center badge badge"><%= @patient.reference_number %></span>
</a>


<br>
<br>
<h1 ><%= display_name_for @patient%> </h1>

<span class="timestamp content">
	last updated <%= time_ago_in_words(@patient.updated_at) %> ago.
</span>

<br>
<span>
	<%= link_to  patient_path @patient do %>
		<%= pluralize(@patient.visits.count, "visit") %>
	<% end %>
	<%= link_to new_patient_visit_path(@patient), :class => 'btn btn-primary btn-mini' do %>
	<i class = "icon-plus icon-white"></i> New Visit
	<% end %>
	
</span>
<span class="timestamp content">
	<% if @patient.visits.count > 0 %>
		last visited <%= time_ago_in_words(@patient.visits.maximum(:date_of_visit)) %> ago.
	<% end %>
</span>



<br>
<span class="content"><strong>Date of Birth:</strong>
	<address> <%= @patient.dob.to_s(:long) %></address>
</span>
<span class="content"><strong>Phone:</strong>  
	<address><%= @patient.mobile %></address>
</span>
<% if @patient.email.present? %>
<span class="content"><strong>Email:</strong>  
	<address><%= @patient.email %></address>
</span>
<% end %>

<span>
	<%= link_to edit_patient_url(@patient), :class => "btn btn-mini btn-info"  do %>
	<i class="icon-edit"></i> Edit Patient's Info
	<% end %>
</span>
