<!-- header tag is html5 friendly -->
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <a class="brand" href= <%= root_path %> >Brij's online dashboard</a>	

      <nav class = "nav-collapse">
        <ul class="nav pull-right">
          <% if false %>
            <li><%= link_to root_path do%>
              <i class="icon-home icon-white"></i> Home
              <% end %></li>
          <% end %>
          <% if signed_in? %>
          <form class="navbar-search pull-left" action= <%= search_ref_patients_path %> method = "get">
          <input type="text" class="search-query span2" placeholder="Enter Patient Ref No" id="reference_number" name = "reference_number">
          </form> 
          <li><%= link_to patients_path do %>
            <i class="icon-list icon-white"></i> My Patients
            <% end %></li>
          <li><%= link_to visits_path do %>
            <i class="icon-list-alt icon-white"></i> My Visits
            <% end %></li>
            <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user icon-white"></i> My Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_physician_path current_physician do %>
                  <i class="icon-home"></i> Profile
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="icon-list"></i> Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to signout_path, method: "delete" do %>
                  <i class="icon-off"></i> Sign Out
                <% end %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>


      </nav>

    </div>
  </div>
</header>
