<!DOCTYPE html>
<html>
<head>
	<title>Brij's online dashboard | <%= yield(:title) %></title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>

<body>
	<%= render :partial => "layouts/header" %>

	<div class="container">
		<%= render :partial => "layouts/flash_section" %>


		<div class="row">
			<div class="span3">
				<aside>
					<%= yield(:sidebar) %>
				</aside>	
			</div>
			<div class="span9">
				<%= yield %>
			</div>
		</div>
	
		<div class="row">
			<%= yield(:fullwidthrow) %>
		</div>	
		<%= render "layouts/footer" %>

      	<% if false && Rails.env.development? %>
      	<%= debug(params) %>
      	<%= debug(session) %>
      	<%= debug(cookies) %>
      	<% end %>
	</div>
</body>
</html>
